# Huawei OCR API Configuration
HUAWEI_OCR_ENDPOINT=https://ocr.cn-north-4.myhuaweicloud.com
HUAWEI_ACCESS_KEY=your_access_key_here
HUAWEI_SECRET_KEY=your_secret_key_here
HUAWEI_PROJECT_ID=your_project_id_here
HUAWEI_REGION=cn-north-4

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# API Configuration
API_KEY=your_api_key_here
API_TIMEOUT=180  # 3 minutes in seconds

# Storage Configuration
STORAGE_PATH=./data/documents
STORAGE_MAX_SIZE_MB=10
STORAGE_RETENTION_DAYS=30

# Format Support Configuration
SUPPORTED_FORMATS=PNG,JPG,JPEG,BMP,GIF,TIFF,WebP,PCX,ICO,PSD,PDF
PDF_MAX_PAGES_AUTO_PROCESS=20
PDF_PARALLEL_PAGES=4
AUTO_ROTATION=true
MAX_BATCH_SIZE=20

# History Database Configuration
HISTORY_DB_PATH=./data/history.db
HISTORY_RETENTION_DAYS=7
HISTORY_CLEANUP_ON_STARTUP=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PATH=./data/logs
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Processing Configuration
PROCESSING_TIMEOUT=180  # 3 minutes
PROCESSING_TARGET_TIME=6  # Target 6 seconds
IMAGE_MAX_SIZE_MB=10
IMAGE_OPTIMAL_SIZE_MB=7

# LLM Configuration (Huawei ModelArts MAAS - DeepSeek V3)
MAAS_API_KEY=your_maas_api_key_here
MAAS_BASE_URL=https://maas-cn-southwest-2.modelarts-maas.com/v1/infers/271c9332-4aa6-4ff5-95b3-0cf8bd94c394/v1
MAAS_MODEL_NAME=DeepSeek-V3
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=30

# OBS Configuration
OBS_BUCKET_NAME=sample-dataset-bucket
OBS_ENDPOINT=https://obs.ap-southeast-3.myhuaweicloud.com

# Deployment Configuration (for Streamlit app)
# Set this to your deployed API URL in production
OCR_API_URL=http://localhost:8000